{
  "name": "Recent PDF",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Easy access to recently viewed or downloaded PDF files.",
  "author": "Alex Weininger",
  "short_name": "Recent PDF",
  "homepage_url": "https://github.com/alexweininger/recent-pdfs",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "./options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "./icons/icon256.png",
    "default_title": "recent pdf",
    "default_popup": "./index.html"
  },

  "background": {
    "scripts": ["./js/script.js"]
  },

  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "history",
    "tabs",
    "downloads",
    "downloads.open",
    "storage"
  ],

  "content_security_policy": "img-src *; script-src 'self'; object-src 'self'"

}
